<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("./partials/css.ejs") %> 
    <title>Document</title>
  </head>
  <body>

    <%- include("./partials/navbar.ejs") %>
    <%# If error found then display it %> 
    
    <% if (error) { %>
      <div class="container">
      <div class="card-panel red lighten-2 col s6"><%= error %></div>
    </div>
      <% } %>
    <div class="container">
      <%# If request if for uploading multiple files then set different action %> 
    <% if (many) { %>
      <form class="col s6" action="/files/upload-many" method="post" enctype="multipart/form-data">
      <% } else { %>
        <form action="/files/upload"  class="col s6" method="post" enctype="multipart/form-data">
      <% } %>
      <div class="file-field input-field">
        <div class="btn">
          
          <%# If request if for uploading multiple files then set multiple attribute %> 
          <% if (many) { %>
            <span>Files</span>
          <input type="file" name="myImages" multiple />
          <% } else { %>
            <span>File</span>
          <input type="file" name="myImage" />
          <% } %>
        </div>
        <div class="file-path-wrapper">
          <input
            class="file-path validate"
            type="text"
            placeholder="Select File"
          />
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">
        Submit
      </button>
    </form>
  </div>
    <%- include("./partials/js.ejs") %> 
  </body>
</html>
